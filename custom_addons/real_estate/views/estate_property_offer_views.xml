<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Form -->
        <record id="estate_property_offer_form_view" model="ir.ui.view">
            <field name="name">estate.property.offer.view.form</field>
            <field name="model">estate.property.offer</field>
            <field name="arch" type="xml">
                <form string="Offer Form">
                    <sheet>
                        <group>
                            <field name="price" />
                        </group>
                        <group>
                            <field name="partner_id" />
                        </group>
                        <group>
                            <field name="validity" />
                        </group>
                        <group>
                            <field name="date_deadline" />
                        </group>
                        <group>
                            <field name="status" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- List -->
        <record id="estate_property_offer_list_view" model="ir.ui.view">
            <field name="name">estate.property.offer.view.list</field>
            <field name="model">estate.property.offer</field>
            <field name="arch" type="xml">
                <list string="Offer List">
                    <field name="price" />
                    <field name="partner_id" />
                    <field name="validity" />
                    <field name="date_deadline" />

                    <button icon="fa-check" name="action_accept" type="object" title="Accept Offer" />
                    <button icon="fa-times" name="action_refuse" type="object" title="Refuse Offer" />

                    <field name="status" />
                </list>
            </field>
        </record>

        <!-- Action -->
        <record id="estate_property_offer_action" model="ir.actions.act_window">
            <field name="name">Real Estate</field>
            <field name="res_model">estate.property.offer</field>
            <field name="view_mode">list,form</field>
        </record>
    </data>
</odoo>